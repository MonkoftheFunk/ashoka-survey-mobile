<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @server_url.url %></h1>
    <a href="<%= url_for :action => :show, :id => @server_url.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @server_url.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @server_url.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="server_url[url]" class="fieldLabel">Url</label>
            <input type="text" id="server_url[url]" name="server_url[url]" value="<%= @server_url.url %>" <%= placeholder( "Url" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
